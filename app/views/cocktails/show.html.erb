<h1><%= @cocktail.name %></h1>

<div id="ingredients">
  <h4><i class="fas fa-glass-martini-alt"></i> Recipee:</h4>
  <% @doses.each do |dose| %>
    <p><%= dose.amount %> <%= dose.ingredient.name %></p>
    <p><%= dose.description %></p>
  <% end %>
</div>

<div id = "doses-form">
  <h4>Fill in the form to add a dose!</h4>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <div class="form-group">
      <%= f.input :amount, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.input :description, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.association :ingredient, class: 'form-control' %>
    </div>
    <%= f.button :submit, class: "btn btn-primary" %>
  <% end %>
</div>
