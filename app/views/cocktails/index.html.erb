<div class="banner">
  <div class="container">
    <h1 id="page-title">Best CocktailBar <strong>in Town!</strong></h1>
  </div>
  <p><%= link_to "Add new cocktail", new_cocktail_path, class: "create"  %></p>
</div>

<div class = "container display">
  <% @cocktails.each do |cocktail| %>
  <div class = "card-container">
    <div class = "cards">
      <p><span>Name:</span> <%= cocktail.name %></p>
      <div id="link-show">
        <%= link_to "more details", cocktail_path(cocktail), class: "btn btn-info button-card" %>
      </div>
      <div id="buttons-on-top-1">
        <%= link_to cocktail_path(cocktail), method: :delete, data: { confirm: "You really want to delete this amazing cocktail?"} do   %>
          <i class="fas fa-minus-square button-action"></i>
        <% end %>
      </div>
      <div id="buttons-on-top-2">
        <%= link_to edit_cocktail_path(cocktail) do   %>
          <i class="fas fa-pen button-action"></i>
        <% end %>
      </div>
      <img class ="avatar-large" src="https://thumbs.dreamstime.com/z/zombie-cocktail-zombie-cocktail-rum-garnished-lime-cold-sweet-summer-fruit-red-alcohol-cocktail-refreshing-drink-121187537.jpg" alt="cocktail">
    </div>
  </div>
  <% end %>
</div>
