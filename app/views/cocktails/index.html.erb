<div class="banner">
  <div class="container">
    <h1 id="page-title">Best CocktailBar <strong>in Town!</strong></h1>
  </div>
  <p><%= link_to "Add new cocktail", new_cocktail_path, class: "create"  %></p>
</div>

<div class = "container display">
  <% @cocktails.each do |cocktail| %>
  <div class = "card-container" data-aos="fade-up" data-aos-duration="1000">
    <div class = "cards">
      <p><span>Name:</span> <%= cocktail.name %></p>
      <div id="link-show">
        <%= link_to "more details", cocktail_path(cocktail), class: "btn btn-info button-card" %>
      </div>
      <div id="buttons-on-top-1">
        <%= link_to cocktail_path(cocktail), method: :delete, data: { confirm: "You really want to delete this amazing cocktail?"} do   %>
          <i class="fas fa-minus-square button-action"></i>
        <% end %>
      </div>
      <%= cl_image_tag cocktail.photo, height: 300, width: 400, crop: :fill, class: "avatar-large" %>
    </div>
  </div>
  <% end %>
</div>
