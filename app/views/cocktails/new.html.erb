<h1 id="title-new">Complete the form to add a new Cocktail to the list!</h1>
<%= link_to "Back to list", cocktails_path %>

<div id="create-grid">
  <div id ="create-cocktail">
    <%= simple_form_for @cocktail do |f| %>
      <%= f.input :name%>
      <%= f.input :photo%>
      <%= f.input :photo_cache, as: :hidden %>
      <div class="btn btn-primary">
        <%= f.button :submit, class: "create-cocktail-button"%>
      </div>
    <% end %>
  </div>
  <div id = "list-create">
    <h3>Here are the already created cocktails</h3>
    <div id ="all-cocktails-create">
      <% @cocktails.each do |cocktail| %>
      <p><%= cocktail.name %></p>
      <% end %>
    </div>
  </div>
</div>

